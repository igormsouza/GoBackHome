@model TimeList
@{
    ViewData["Title"] = "Home Page";
}

<div class="card text-center" style="background-color:#1d4380;">
    <div class="card-body">
        <br />
        <br />
        <p class="card-title"  style="color:white;font-size: 20px;line-height: 1.4;text-align: center;text-shadow: 0 1px 2px rgba(0,0,0,.6);">
            Check the real time of public transport from Park West.
        </p>
        <p class="card-text"  style="color:white;font-size: 20px;line-height: 1.4;text-align: center;text-shadow: 0 1px 2px rgba(0,0,0,.6);">
            Last Update: @Model.LastRefresh
        </p>
        <a class="btn btn-default" href="@Url.Action("Index", "Home")">
            Refresh
        </a>
        <br />
        <br />
        <br />
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <h2>Bus 79A</h2>
        <ul>
            @foreach (var item in Model.Bus79a)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <h2>Bus 151</h2>
        <ul>
            @foreach (var item in Model.Bus151)
            {
            <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <h2>Bus 860</h2>
        <ul>
            @foreach (var item in Model.Bus860)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Luas (Kylemore)</h2>
        <ul>
            @foreach (var item in Model.Luas)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Train</h2>
        <ul>
            @foreach (var item in Model.Train)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
</div>
