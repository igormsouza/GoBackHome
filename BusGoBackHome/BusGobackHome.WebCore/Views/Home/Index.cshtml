@model TimeList
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel">
    <div>
        <div class="item">
            <img src="~/images/banner4.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check the real time of public transport from Park West.
                    <br />
                    Last Update: @Model.LastRefresh
                    <a class="btn btn-default" href="@Url.Action("Index", "Home")">
                        Refresh
                    </a>
                </p>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-1">

    </div>
    <div class="col-md-2">
        <h2>79A</h2>
        <ul>
            @foreach (var item in Model.Bus79a)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <h2>151</h2>
        <ul>
            @foreach (var item in Model.Bus151)
            {
            <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <h2>860</h2>
        <ul>
            @foreach (var item in Model.Bus860)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <h2>Luas</h2>
        <ul>
            @foreach (var item in Model.Luas)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <h2>Train</h2>
        <ul>
            @foreach (var item in Model.Train)
            {
                <li>@item.DepartureTimeStr</li>
            }
        </ul>
    </div>
</div>
